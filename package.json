{
  "name": "rum-proxy",
  "version": "1.0.0",
  "private": true,
  "description": "RUM Explorer proxy for og images & more",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "deploy": "hedy --build --verbose --deploy --cloudflare-email $HLX_CLOUDFLARE_EMAIL --cloudflare-account-id $HLX_CLOUDFLARE_ACCOUNT --cloudflare-auth $HLX_CLOUDFLARE_AUTH --name ${HLX_CLOUDFLARE_NAME:-rum-proxy-prod}",
    "test": "c8 mocha -i -g 'Post-Deploy' --spec test/*.test.js",
    "pretest": "node tools/spider-list.js",
    "test-postdeploy": "TEST_INTEGRATION=true node --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=lcov.info --test-reporter=spec --test-reporter-destination=stdout --test-reporter=junit --test-reporter-destination=junit.xml --test-name-pattern=Post-Deploy",
    "lint": "eslint .",
    "semantic-release": "semantic-release"
  },
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/rum-proxy"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/rum-proxy/issues"
  },
  "homepage": "https://github.com/adobe/rum-proxy#readme",
  "mocha": {
    "require": [
      "test/setup-env.js"
    ],
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "2.0.6",
    "@adobe/fetch": "4.1.8",
    "@adobe/helix-deploy": "12.1.3",
    "@adobe/helix-deploy-plugin-edge": "1.0.5",
    "@cloudflare/workers-types": "4.20240806.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "c8": "10.1.2",
    "dotenv": "16.4.5",
    "esbuild": "0.23.0",
    "eslint": "8.57.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.29.1",
    "husky": "9.1.4",
    "lint-staged": "15.2.9",
    "mocha": "10.7.3",
    "mocha-multi-reporters": "1.5.1",
    "nock": "13.5.4",
    "semantic-release": "24.0.0",
    "wrangler": "3.71.0"
  },
  "wsk": {
    "target": [
      "cloudflare"
    ],
    "arch": "edge",
    "distDirectory": "bin/dist",
    "entryFile": "src/index.js",
    "plugin": "@adobe/helix-deploy-plugin-edge",
    "package": {
      "name": "helix3"
    }
  },
  "lint-staged": {
    "*.(js|cjs|mjs)": "eslint"
  }
}